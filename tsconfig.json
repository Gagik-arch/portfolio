{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "baseUrl": ".",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "checkJs": false,
        "paths": {
            "$lib/*": [
                "./lib/*"
            ],
            "$uikit/*": [
                "./src/uikit/*"
            ],
            "$types/*": [
                "./src/types/*"
            ],
            "$assets/*": [
                "./assets/*"
            ],
            "$store/*": [
                "./src/store/*"
            ],
            "$components/*": [
                "./src/components/*"
            ],
            "$utils/*": [
                "./src/utils/*"
            ],
            "$apps/*": [
                "./src/apps/*"
            ],
        },
    },
    "include": [
        "src",
        "./declarations.d.ts",
        "lib",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}